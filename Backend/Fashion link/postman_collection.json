    {
      "name": "Product - Upload Image",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{authToken}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "image", "type": "file", "src": [] },
            { "key": "title", "value": "Sample Image", "type": "text" },
            { "key": "productId", "value": "{{productId}}", "type": "text" },
            { "key": "brand", "value": "{{brand}}", "type": "text" },
            { "key": "category", "value": "{{category}}", "type": "text" },
            { "key": "price", "value": "{{price}}", "type": "text" },
            { "key": "color", "value": "{{color}}", "type": "text" },
            { "key": "size", "value": "{{size}}", "type": "text" }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}/image",
          "host": ["{{baseUrl}}"],
          "path": ["api","products","{{productId}}","image"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": [ "pm.test('Image upload returns 200 or 201', function(){ pm.expect(pm.response.code).to.be.oneOf([200,201]); });" ] }
        }
      ]
    },
