{
  "info": {
    "name": "Fashion Link API",
    "_postman_id": "fashion-link-api-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api","auth","login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "if(json && (json.token || json.accessToken)){ var t = json.token || json.accessToken; pm.environment.set('authToken', t); pm.test('Saved authToken', function(){pm.expect(pm.environment.get('authToken')).to.be.a('string');}); }"
            ]
          }
        }
      ]
    },
    {
      "name": "Auth - Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/signup",
          "host": ["{{baseUrl}}"],
          "path": ["api","auth","signup"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": [ "pm.test('Signup returns 201 or 200', function(){ pm.expect(pm.response.code).to.be.oneOf([200,201]); });" ] }
        }
      ]
    },
    {
      "name": "Products - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{authToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productId\": {{productId}},\n  \"brand\": \"{{brand}}\",\n  \"category\": \"{{category}}\",\n  \"price\": \"{{price}}\",\n  \"color\": \"{{color}}\",\n  \"size\": \"{{size}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api","products"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Create product status 201 or 200', function(){ pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
              "var json = pm.response.json();",
              "pm.test('Response has expected fields', function(){ pm.expect(json).to.have.property('brand'); pm.expect(json.brand).to.eql(pm.environment.get('brand')); pm.expect(json).to.have.property('category'); pm.expect(json.category).to.eql(pm.environment.get('category')); pm.expect(json).to.have.property('price'); pm.expect(json.price).to.eql(pm.environment.get('price')); pm.expect(json).to.have.property('color'); pm.expect(json.color).to.eql(pm.environment.get('color')); pm.expect(json).to.have.property('size'); pm.expect(json.size).to.eql(pm.environment.get('size')); });",
              "if(json && json.id){ pm.environment.set('lastCreatedProductId', json.id); }"
            ]
          }
        }
      ]
    },
